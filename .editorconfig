root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
trim_trailing_whitespace = true
insert_final_newline     = true

[*.py]
indent_size              = 4

[*.coffee]
indent_size              = 2

[*.js]
indent_size              = 2

[*.json]
indent_size              = 2

[*.haml]
indent_size              = 2

[*.scss]
indent_size              = 2
